<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<div id="products">
  <% @products.each do |product| %>
    <p>
      <strong>Name:</strong>
      <%= product.name %>
    </p>
    <p>
      <strong>Categories:</strong>
      <%= product.categories.name %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= product.price %>
    </p>
    <p>
      <%= link_to "Show this product", product %>
    </p>
  <% end %>
</div>